		<property name="window.pathdisplay.button:background"              value="@MK_Gray" />
		<property name="window.pathdisplay.button:border"                  value="@MK_LightGray" />
		<property name="window.pathdisplay.popup:background"               value="@Black" />
		<property name="window.pathdisplay.popup:border"                   value="@MK_LightGray" />
		<property name="window.pathdisplay.popup:border_thickness"         value="0" />
		<property name="window.pathdisplay.popup.text:foreground"          value="$window.foreground" />
		<property name="window.pathdisplay.popup.list:foreground"          value="$window.foreground" />
		<property name="window.pathdisplay.popup.list:background"          value="$window.background" />
		<property name="window.pathdisplay.popup.list.selected:foreground" value="@MK_Green" />
		<property name="window.pathdisplay.popup.list.selected:background" value="@MK_Gray" />
		<property name="window.pathdisplay.popup.button:foreground"        value="@MK_VeryLightGray" />
		<property name="window.pathdisplay.popup.button:background"        value="@MK_Gray" />
		<property name="window.pathdisplay.popup.button:border"            value="@MK_LightGray" />

		<property name="window.inlinesearch:background"                    value="@MK_VeryDarkGray" />
		<property name="window.inlinesearch:foreground"                    value="@MK_VeryLightGray" />
		<property name="window.inlinesearch.btnSearch:foreground"          value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnCaseIns:foreground"         value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnWholeWord:foreground"       value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnRegex:foreground"           value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.textbox:background"            value="@MK_Gray" />
		<property name="window.inlinesearch.textbox:foreground"            value="@MK_VeryLightGray" />

		<property name="window.globalsearch.input:foreground"              value="@MK_VeryLightGray" />
		<property name="window.globalsearch.input:background"              value="@MK_Gray" />
		<property name="window.globalsearch.input:border"                  value="@Black" />
		<property name="window.globalsearch.placeholder:foreground"        value="@MK_Gray" />
		<property name="window.globalsearch.button:foreground"             value="@Transparent" />
		<property name="window.globalsearch.button:background"             value="@MK_DarkGray" />

		<property name="window.notesview.flat:background"                  value="@MK_VeryDarkGray" />
		<property name="window.notesview.flat:foreground"                  value="@MK_VeryLightGray" />
		<property name="window.notesview.flat.selected:background"         value="@MK_Gray" />
		<property name="window.notesview.flat.selected:foreground"         value="@MK_Green" />
		<property name="window.notesview.flat.datetime1:foreground"        value="@MK_Brown" />
		<property name="window.notesview.flat.datetime2:foreground"        value="@MK_Brown" />
		<property name="window.notesview.flat.preview:foreground"          value="@MK_LightGray" />
		<property name="window.notesview.flat.separator"                   value="@MK_LightGray" />
