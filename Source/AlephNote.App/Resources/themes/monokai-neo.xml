<theme>
	<meta>
		<name>Monokai Neo</name>
		<version>1.1</version>
		<compatibility>*</compatibility>
	</meta>

	<ref>
		<valueref key="MK_VeryLightGray"  type="color">#F9F5DD</valueref>
		<valueref key="MK_LightGray"      type="color">#716A60</valueref>
		<valueref key="MK_Gray"           type="color">#434046</valueref>
		<valueref key="MK_SlightDarkGray" type="color">#3C393E</valueref>
		<valueref key="MK_DarkGray"       type="color">#363338</valueref>
		<valueref key="MK_VeryDarkGray"   type="color">#242424</valueref>

		<valueref key="MK_Red"            type="color">#FF5794</valueref>
		<valueref key="MK_Brown"          type="color">#CC8D66</valueref>
		<valueref key="MK_Orange"         type="color">#FAA23D</valueref>
		<valueref key="MK_Yellow"         type="color">#E6DB7A</valueref>
		<valueref key="MK_Green"          type="color">#B2E64C</valueref>
		<valueref key="MK_Cyan"           type="color">#66CCE1</valueref>
		<valueref key="MK_Blue"           type="color">#5596F1</valueref>
		<valueref key="MK_Purple"         type="color">#AA7DFC</valueref>


		<!--// Other constants -->

		<valueref key="Transparent"    type="color">#00000000</valueref>
		<valueref key="Black"          type="color">#000000</valueref>
		<valueref key="White"          type="color">#FFFFFF</valueref>
	</ref>

	<data>

		<property name="scintilla.background"                              value="@MK_VeryDarkGray" />
		<property name="scintilla.default:foreground"                      value="@MK_VeryLightGray" />
		<property name="scintilla.margin.numbers:background"               value="@MK_VeryDarkGray" />
		<property name="scintilla.margin.symbols:background"               value="@MK_VeryDarkGray" />
		<property name="scintilla.whitespace:color"                        value="@MK_Gray" />

		<property name="scintilla.link:foreground"                         value="@MK_Purple" />
		<property name="scintilla.markdown.header:foreground"              value="@MK_Brown" />
		<property name="scintilla.markdown.list:foreground"                value="@MK_LightGray" />
		<property name="scintilla.markdown.url:foreground"                 value="@MK_Purple" />
		<property name="scintilla.markdown.code:foreground"                value="@MK_Green" />

		<property name="scintilla.search.local:color"                      value="@MK_Cyan" />
		<property name="scintilla.search.local:alpha"                      value="100" />
		<property name="scintilla.search.local:outline_alpha"              value="230" />
		<property name="scintilla.search.global:color"                     value="@MK_Yellow" />
		<property name="scintilla.search.global:alpha"                     value="100" />
		<property name="scintilla.search.global:outline_alpha"             value="230" />


		<property name="window.background"                                 value="@MK_VeryDarkGray" />
		<property name="window.foreground"                                 value="@MK_VeryLightGray" />
		<property name="window.splitter"                                   value="@Transparent" />
		<property name="window.notetitle:foreground"                       value="@Mk_Yellow" />
		<property name="window.changedate:foreground"                      value="@MK_LightGray" />
