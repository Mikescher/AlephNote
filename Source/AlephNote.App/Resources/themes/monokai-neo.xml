		<property name="window.menubar:foreground"                         value="@MK_VeryLightGray" />

		<property name="window.tageditor.tag:background"                   value="@Black" />
		<property name="window.tageditor.tag:bordercolor_default"          value="@MK_Blue" />
		<property name="window.tageditor.tag:bordercolor_highlighted"      value="@MK_Blue" />
		<property name="window.tageditor.tag:foreground"                   value="@MK_VeryLightGray" />
		<property name="window.tageditor.placeholder"                      value="@MK_LightGray" />
		<property name="window.tageditor.popup:background"                 value="@Black" />
